extends layout

block content
    h1= title
    p Administration
    #wrapper    
        h2 User List
        #userList
            table
                thead
                    th username
                    th full name
                    th status
                    th delete
                tbody
    h2 Add User:
    #form
        form(name='addUser', method="post" action="/admin/adduser")
            div.input
                table
                    tr
                        td
                            span.label username
                        td
                            input(type="text", name="username")
                    tr
                        td
                            span.label full name
                        td
                            input(type="text", name="name")
                    tr
                        td
                            span.label PIN
                        td
                            input(type="number", name="pin")
                        td
                            div.action
                        td
                            input(type='hidden' name='status' value=0)
                            input(type="submit", value="add")
